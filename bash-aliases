alias py=python
alias ll='ls -alF'
alias box='ssh skier@box.haxx.in'
alias ls='ls --color=always'
alias rvim='vim -R -'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

alias maek=make
alias mkae=make
alias amke=make
alias amek=make

# git shortcuts
alias ga='git add'
alias gap='git add -p'
alias gc='git commit'
alias gcam='gc -am'
alias gch='git checkout'
alias gcm='gc -m'
alias gmt='git mergetool'
alias sps='git stash && git pull -r && git stash pop'
alias grh='git reset HEAD'
alias gpl='git pull'
alias gps='git push'

# under linux we don't want to add |less to the commands, as this happens
# by default
if [ "$OS" == "Windows_NT" ]; then
    alias cac='git diff --cached | less'
    alias gd='git diff | less'
    alias gl='git log | less'
    alias gsh='git show | less'
    alias gst='git status | less'
else
    alias cac='git diff --cached'
    alias gd='git diff'
    alias gl='git log'
    alias gsh='git show'
    alias gst='git status'
fi

if [ "$OS" == "Windows_NT" ]; then
    alias vim=gvim
    alias py26='/c/Python26/python.exe'
    alias putty='/c/ProgFiles86/putty.exe'
    alias telnet='/c/ProgFiles86/putty.exe -telnet'
    alias tig='/c/cygwin/bin/tig.exe'

    6p() { curl -s -F "content=<${1--}" -F ttl=604800 -w "%{redirect_url}\n" \
        -o /dev/null https://p.6core.net/ | putclip ; getclip ; }

    cd /d/Git
fi
